<div id="container">
	<h1>Table <%= @table.number %></h1>
	<h5>today your waiter will be <%=@table.waiter.name%></h5>
	<br>
	<% if current_client.present? %>
		<h3><%= link_to "Go to your page", table_client_path(@table,current_client) %></h3>
	<% end %>
	<br>

	<div id="clientList">
		<% if not current_client.present? %>
			<div id="login">
			<%= render 'clients/form' %>
			</div>
		<% end %>
	
		<% if @table.clients.count < 1 %>
			There is no one signed yet 
		<%else%>
			<ul>
			<% @table.clients.each do |c| %>
				<div id="client">
					<li><%=c.name%></li>
				</div>
			<%end%>
			</ul>
		<%end%>
	</div>

	<br>
</div>
